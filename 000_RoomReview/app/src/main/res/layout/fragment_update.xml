<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.update.UpdateFragment">

    <EditText
        android:id="@+id/edtfirstname_update"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="36dp"
        android:ems="10"
        android:hint="first name"
        android:inputType="textPersonName"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtlastname_update"
        app:layout_constraintTop_toBottomOf="@id/edtfirstname_update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="36dp"
        android:ems="10"
        android:hint="last name"
        android:inputType="textPersonName"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edtage_update"
        app:layout_constraintTop_toBottomOf="@id/edtlastname_update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="36dp"
        android:ems="10"
        android:hint="age"
        android:inputType="number"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_submit_update"
        app:layout_constraintEnd_toEndOf="@id/edtage_update"
        app:layout_constraintStart_toStartOf="@id/edtage_update"
        app:layout_constraintTop_toBottomOf="@id/edtage_update"
        android:layout_marginTop="12dp"
        android:text="update"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>