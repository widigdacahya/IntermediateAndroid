<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.TheStackWidget.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.TheStackWidget.AppWidgetContainer">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <StackView
            android:id="@+id/stack_view_widgetApp"
            android:layout_width="match_parent"
            android:layout_weight="9"
            android:loopViews="true"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/banner_text_widgetApp"
            android:layout_gravity="center"
            android:text="@string/uwu_banner"
            android:layout_weight="1"
            android:padding="8dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="@color/pink_200"
            android:textColor="@color/pink_700"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <TextView
        android:id="@+id/empty_view_widgetApp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/black"
        android:text="@string/no_data"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone" />


</RelativeLayout>