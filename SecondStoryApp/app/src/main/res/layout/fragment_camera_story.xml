<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.CameraStoryFragment">

    <androidx.camera.view.PreviewView
        android:id="@+id/viewfinder_camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/iv_switchcam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/ic_baseline_cameraswitch_24"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/change_camera" />


    <ImageView
        android:id="@+id/iv_btn_camera"
        android:src="@drawable/ic_twotone_photo_camera_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="36dp"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:contentDescription="@string/capture_camera" />

</androidx.constraintlayout.widget.ConstraintLayout>